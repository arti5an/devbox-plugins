{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox-plugin.schema.json",
  "name": "phoenix",
  "version": "0.0.2",
  "description": "This plugin automatically configures elixir with mix and hex support for erlang modules.",
  "packages": {
    "elixir": "latest",
    "inotify-tools": "latest",
    "postgresql": "latest"
  },
  "env": {
    "ERL_AFLAGS": "-kernel shell_history enabled",
    "HEX_HOME": "{{ .Virtenv }}/hex",
    "MIX_HOME": "{{ .Virtenv }}/mix"
  },
  "shell": {
    "init_hook": ["{{ .Virtenv }}/bin/initHook.sh"],
    "scripts": {
      "console": "iex -S mix",
      "routes": "mix phx.routes",
      "test": "mix test"
    }
  },
  "create_files": {
    "{{ .Virtenv }}/hex": "",
    "{{ .Virtenv }}/mix": "",
    "{{ .Virtenv }}/bin/initHook.sh": "config/initHook.sh",
    "{{ .Virtenv }}/process-compose.yaml": "config/process-compose.yaml"
  }
}
